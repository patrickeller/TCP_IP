{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build all",
      		"dependsOn": ["Build Server", "Build Client"],
			"dependsOrder": "parallel"
		},
		{
			"type": "cppbuild",
			"label": "Build Server",
			"command": "g++.exe",
			"args": [
				"-g3",
				"-std=c++20",
				//"-mwindows",
				"${workspaceFolder}\\server.cpp",
				"-o",
				"${workspaceFolder}\\dist\\server.exe",
				"-lws2_32",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "Build Client",
			"command": "g++.exe",
			"args": [
				"-g3",
				"-std=c++20",
				"${workspaceFolder}\\client.cpp",
				//"-mwindows",
				"-o",
				"${workspaceFolder}\\dist\\client.exe",
				"-lws2_32",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "Kill Server",
			"command": "taskkill",
			"args": [
				"/T",
				"/IM",
				"server.exe",
				"2>NUL",
				">NUL",
				"/FI", 
				"\"STATUS eq RUNNING\""
			],
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "none",
			"detail": "Kill running Process"
		},
		{
			"type": "cppbuild",
			"label": "Kill Client",
			"command": "taskkill",
			"args": [
				"/T",
				"/IM",
				"client.exe",
				"2>NUL",
				">NUL",
				"/FI", 
				"\"STATUS eq RUNNING\""
			],
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "none",
			"detail": "Kill running Process"
		},
		{
			"type": "cppbuild",
			"label": "Build with MSVC",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/std:c++latest",
				"/EHsc",
				"/Fe:",
				"${fileDirname}\\main.exe",
				"${workspaceFolder}\\*.cpp"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "compiler: cl.exe"
		},
		{
			"type": "cppbuild",
			"label": "Build with Clang",
			"command": "C:\\mingw64\\bin\\clang++.exe",
			"args": [
				"-g",
				"-std=c++20",
				"${workspaceFolder}\\*.cpp",
				"-o",
				"${fileDirname}\\main.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\mingw64\\bin\\clang++.exe"
		}
	]
}